{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "MicroSSR",

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "types": ["@microssr/typings-ts-jsx-str"],
    "jsx": "react",
    "jsxFactory": "JSX.createElement",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}